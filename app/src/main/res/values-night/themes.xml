<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpingHands" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_medium</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDarkGreen</item>
        <item name="colorPrimaryVariant">@color/colorLightGreen</item>
        <item name="colorOnPrimary">@color/colorBg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorLightGreen</item>
        <item name="colorSecondaryVariant">@color/colorDarkGreen</item>
        <item name="colorOnSecondary">@color/colorTextNormal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- ActionBar application theme. -->
    <style name="Theme.HelpingHands.ActionBarActivity" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="fontFamily">@font/poppins_medium</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDarkGreen</item>
        <item name="colorPrimaryVariant">@color/colorLightGreen</item>
        <item name="colorOnPrimary">@color/colorBg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorLightGreen</item>
        <item name="colorSecondaryVariant">@color/colorDarkGreen</item>
        <item name="colorOnSecondary">@color/colorTextNormal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>