<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jstechnologies.helpinghands">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ui.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelpingHands"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.views.splashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.views.serviceDisplay.ServiceDisplayActivity" />
        <activity
            android:name=".ui.views.search.SearchableActivity"
            android:theme="@style/Theme.HelpingHands.ActionBarActivity" />
        <activity android:name=".ui.views.base.BaseActivity" />
        <activity android:name=".ui.views.serviceLogin.ServiceLoginActivity" />
        <activity
            android:name=".ui.views.addService.AddServiceActivity"
            android:theme="@style/Theme.HelpingHands.ActionBarActivity" />
        <activity android:name=".ui.views.dashBoard.DashBoardActivity">

        </activity>
    </application>

</manifest>